<TooltipMDIconButton@MDIconButton+MDTooltip>
<OngkirScreen>:

    MDToolbar:

        md_bg_color:0,0,0,0
        elevation:0
        pos_hint: {"top": 1}


        left_action_items: [['chevron-left', lambda x: root.go_back()]]

        specific_text_color: hex('#000000')
    MDCard:
        pos_hint:{'center_x':0.22,'center_y':0.9}
        size_hint:0.4,0.05
        elevation:0


        MDLabel:
            text:"Provinsi:"
            halign:'left'
            font_style:'Button'



    Spinner:

        id: province

        width:500
        height:50
        size_hint_x:None
        size_hint_y:None
        pos_hint:{'center_x': 0.65,'center_y':0.9}
        text:"Provinsi Asal"
        on_text:root.parent.parent.show_kota1(province.text)

    MDCard:
        pos_hint:{'center_x':0.22,'center_y':0.8}
        size_hint:0.4,0.1
        elevation:0


        MDLabel:
            text:"Kota Asal:"
            halign:'left'
            font_style:'Button'

    MyTextInput:

        icon_right:'highway'
        id: search_provinsi


        width:500
        size_hint_x:None

        pos_hint:{'center_x': 0.65,'center_y':0.85}



    TooltipMDIconButton:
        tooltip_text:'Cari Provinsi'
        icon: 'database-search'
        on_release:
            root.parent.parent.change_spinn()

        pos_hint: {'center_x': 0.15,'center_y':0.85}


    Spinner:

        id: kota

        width:500
        height:50
        size_hint_x:None
        size_hint_y:None
        pos_hint:{'center_x': 0.65,'center_y':0.8}
        text:"Kota Asal"




    MDCard:
        pos_hint:{'center_x':0.22,'center_y':0.7}
        size_hint:0.4,0.1
        elevation:0


        MDLabel:
            text:"Provinsi:"
            halign:'left'
            font_style:'Button'
